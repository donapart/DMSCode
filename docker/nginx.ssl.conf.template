# Nginx Reverse Proxy for DMSCode (Hetzner) - SSL Version
# Template file processed by envsubst in the official nginx image.

# Expected env vars:
# - DMS_SERVER_NAME (e.g. dms.example.com)
# - DMS_API_KEY (optional; if set, requests must include X-API-KEY)

map_hash_bucket_size 128;

map $http_x_api_key $api_key_ok {
  default 0;
  "${DMS_API_KEY}" 1;
}

# Redirect HTTP to HTTPS
server {
  listen 80;
  server_name ${DMS_SERVER_NAME};

  # ACME challenge for Let's Encrypt renewal
  location /.well-known/acme-challenge/ {
    root /var/www/certbot;
  }

  location / {
    return 301 https://$host$request_uri;
  }
}

# HTTPS Server
server {
  listen 443 ssl http2;
  server_name ${DMS_SERVER_NAME};

  # SSL Configuration
  ssl_certificate /etc/nginx/certs/fullchain.pem;
  ssl_certificate_key /etc/nginx/certs/privkey.pem;

  # Modern SSL settings
  ssl_protocols TLSv1.2 TLSv1.3;
  ssl_ciphers ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-ECDSA-CHACHA20-POLY1305:ECDHE-RSA-CHACHA20-POLY1305:DHE-RSA-AES128-GCM-SHA256:DHE-RSA-AES256-GCM-SHA384;
  ssl_prefer_server_ciphers off;
  ssl_session_timeout 1d;
  ssl_session_cache shared:SSL:50m;
  ssl_session_tickets off;

  # HSTS (1 year)
  add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;

  # Docker DNS resolver
  resolver 127.0.0.11 valid=30s ipv6=off;

  # Health Check (proxy itself)
  location = /health {
    add_header Content-Type application/json;
    return 200 '{"status":"ok","ssl":true}';
  }

  # CORS
  add_header Access-Control-Allow-Origin * always;
  add_header Access-Control-Allow-Methods "GET, POST, OPTIONS, DELETE" always;
  add_header Access-Control-Allow-Headers "Content-Type, Authorization, X-API-KEY" always;

  # API Routes for Web Dashboard
  location /api/storage/ {
    set $upstream_storage storage-service:8550;
    rewrite ^/api/storage/(.*) /$1 break;
    proxy_pass http://$upstream_storage;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    client_max_body_size 100M;
    proxy_read_timeout 300s;
  }

  location /api/search/ {
    set $upstream_search search-service:8520;
    rewrite ^/api/search/(.*) /$1 break;
    proxy_pass http://$upstream_search;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_read_timeout 300s;
  }

  location /api/ocr/ {
    set $upstream_ocr ocr-service:8510;
    rewrite ^/api/ocr/(.*) /$1 break;
    proxy_pass http://$upstream_ocr;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    client_max_body_size 50M;
    proxy_read_timeout 300s;
  }

  # Ollama (Chat/LLM)
  location /api/ {
    set $upstream_ollama ollama:11434;
    proxy_pass http://$upstream_ollama;
    proxy_http_version 1.1;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;

    # Streaming
    proxy_buffering off;
    chunked_transfer_encoding on;
    proxy_read_timeout 300s;
  }

  # OCR
  location /ocr/ {
    set $upstream_ocr ocr-service:8510;
    rewrite ^/ocr/(.*) /$1 break;
    proxy_pass http://$upstream_ocr;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    client_max_body_size 50M;
    proxy_read_timeout 300s;
  }

  # Semantic Search
  location /search/ {
    set $upstream_search search-service:8520;
    rewrite ^/search/(.*) /$1 break;
    proxy_pass http://$upstream_search;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_read_timeout 300s;
  }

  # TTS
  location /tts/ {
    set $upstream_tts tts-service:8505;
    rewrite ^/tts/(.*) /$1 break;
    proxy_pass http://$upstream_tts;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_read_timeout 300s;
  }

  # Graph Service (Knowledge Graph)
  location /graph/ {
    set $upstream_graph graph-service:8530;
    rewrite ^/graph/(.*) /$1 break;
    proxy_pass http://$upstream_graph;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_read_timeout 300s;
  }

  # Automation Service (Workflows)
  location /automation/ {
    set $upstream_automation automation-service:8540;
    rewrite ^/automation/(.*) /$1 break;
    proxy_pass http://$upstream_automation;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_read_timeout 300s;
  }

  # Storage Service (MinIO S3)
  location /storage/ {
    set $upstream_storage storage-service:8550;
    rewrite ^/storage/(.*) /$1 break;
    proxy_pass http://$upstream_storage;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    client_max_body_size 100M;
    proxy_read_timeout 300s;
  }

  # Web Dashboard (Next.js)
  location / {
    set $upstream_web web:3000;
    proxy_pass http://$upstream_web;
    proxy_http_version 1.1;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection "upgrade";
  }
}
