# Nginx Reverse Proxy for DMSCode (Hetzner)
# Template file processed by envsubst in the official nginx image.

# Expected env vars:
# - DMS_SERVER_NAME (e.g. api.example.com)
# - DMS_API_KEY (optional; if set, requests must include X-API-KEY)

map_hash_bucket_size 128;

map $http_x_api_key $api_key_ok {
  default 0;
  "${DMS_API_KEY}" 1;
}

server {
  listen 80;
  server_name ${DMS_SERVER_NAME};

  # Health Check (proxy itself)
  location = /health {
    add_header Content-Type application/json;
    return 200 '{"status":"ok"}';
  }

  # CORS
  add_header Access-Control-Allow-Origin * always;
  add_header Access-Control-Allow-Methods "GET, POST, OPTIONS, DELETE" always;
  add_header Access-Control-Allow-Headers "Content-Type, Authorization, X-API-KEY" always;

  # Ollama (Chat/LLM)
  location /api/ {
    proxy_pass http://ollama:11434;
    proxy_http_version 1.1;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;

    # Streaming
    proxy_buffering off;
    chunked_transfer_encoding on;
    proxy_read_timeout 300s;
  }

  # OCR
  location /ocr/ {
    rewrite ^/ocr/(.*) /$1 break;
    proxy_pass http://ocr-service:8510;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    client_max_body_size 50M;
    proxy_read_timeout 300s;
  }

  # Semantic Search
  location /search/ {
    rewrite ^/search/(.*) /$1 break;
    proxy_pass http://search-service:8520;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_read_timeout 300s;
  }

  # TTS
  location /tts/ {
    rewrite ^/tts/(.*) /$1 break;
    proxy_pass http://tts-service:8505;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_read_timeout 300s;
  }

  # Graph Service (Knowledge Graph)
  location /graph/ {
    rewrite ^/graph/(.*) /$1 break;
    proxy_pass http://graph-service:8530;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_read_timeout 300s;
  }

  # Automation Service (Workflows)
  location /automation/ {
    rewrite ^/automation/(.*) /$1 break;
    proxy_pass http://automation-service:8540;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_read_timeout 300s;
  }

  # Storage Service (MinIO S3)
  location /storage/ {
    rewrite ^/storage/(.*) /$1 break;
    proxy_pass http://storage-service:8550;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    client_max_body_size 100M;
    proxy_read_timeout 300s;
  }

  # Web Dashboard (Next.js)
  location / {
    proxy_pass http://web:3000;
    proxy_http_version 1.1;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection "upgrade";
  }
}
